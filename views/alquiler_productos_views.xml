<odoo>
    <data>
        <!-- Vista de formulario para el préstamo -->
        <record id="view_form_alquiler_producto" model="ir.ui.view">
            <field name="name">alquiler.producto.form</field>
            <field name="model">alquiler.producto</field>
            <field name="arch" type="xml">
                <form string="Préstamo de Producto">
                    <sheet>
                        <group>
                            <field name="number" readonly="1"/>
                            <field name="customer_id"/>
                            <field name="product_id"/>
                            <field name="rent_day"/>
                            <field name="warranty_date" readonly="1"/>
                            <field name="status" readonly="1"/>
                            <field name="observations"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>